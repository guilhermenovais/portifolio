---
import { experiences } from '../config';

interface Props {
  locale: string;
}

const { locale } = Astro.props;
const currentLocale = locale || 'en';

const title = currentLocale === 'pt' ? 'ExperiÃªncia' : 'Experience';
---

<section id="experience" class="min-h-screen flex items-center justify-center bg-white py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-16 text-center">
      {title}
    </h2>

    <div class="max-w-4xl mx-auto">
      <div class="relative border-l-2 border-gray-300 pl-8 ml-4 space-y-12">
        {experiences.map((exp) => (
          <div class="relative">
            <!-- Timeline dot -->
            <div class="absolute -left-[2.4rem] top-1 w-4 h-4 bg-gray-900 rounded-full border-4 border-white"></div>

            <div class="bg-gray-50 p-6 rounded-lg border border-gray-200 hover:border-gray-900 transition-colors">
              <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-2 mb-3">
                <h3 class="text-xl md:text-2xl font-bold text-gray-900">
                  {exp.title[currentLocale as keyof typeof exp.title]}
                </h3>
                <span class="text-sm md:text-base text-gray-600 font-medium whitespace-nowrap">
                  {exp.period[currentLocale as keyof typeof exp.period]}
                </span>
              </div>

              <p class="text-lg text-gray-700 font-medium mb-3">
                {exp.company}
              </p>

              <p class="text-gray-700 leading-relaxed">
                {exp.description[currentLocale as keyof typeof exp.description]}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
