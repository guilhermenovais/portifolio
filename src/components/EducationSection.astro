---
import { education } from '../config';

interface Props {
  locale: string;
}

const { locale } = Astro.props;
const currentLocale = locale || 'en';

const title = currentLocale === 'pt' ? 'Educação' : 'Education';
---

<section id="education" class="min-h-screen flex items-center justify-center bg-gray-50 py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-16 text-center">
      {title}
    </h2>

    <div class="max-w-4xl mx-auto">
      <div class="relative border-l-2 border-gray-300 pl-8 ml-4 space-y-12">
        {education.map((edu) => (
          <div class="relative">
            <!-- Timeline dot -->
            <div class="absolute -left-[2.4rem] top-1 w-4 h-4 bg-gray-900 rounded-full border-4 border-white"></div>

            <div class="bg-white p-6 rounded-lg border border-gray-200 hover:border-gray-900 transition-colors">
              <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-2 mb-3">
                <h3 class="text-xl md:text-2xl font-bold text-gray-900">
                  {edu.course[currentLocale as keyof typeof edu.course]}
                </h3>
                <span class="text-sm md:text-base text-gray-600 font-medium whitespace-nowrap">
                  {edu.period[currentLocale as keyof typeof edu.period]}
                </span>
              </div>

              <p class="text-lg text-gray-700 font-medium">
                {edu.institution}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
