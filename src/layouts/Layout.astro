---
import '../styles/global.css';

interface Props {
	title?: string;
	locale?: string;
}

const { title = 'Portfolio', locale = 'en' } = Astro.props;
---

<!doctype html>
<html lang={locale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html {
		scroll-behavior: smooth;
		margin: 0;
		padding: 0;
	}

	body {
		margin: 0;
		width: 100%;
		min-height: 100vh;
	}
</style>
